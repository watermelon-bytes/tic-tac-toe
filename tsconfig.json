{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./static/compiled/",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "lib": ["ES2020", "dom"]
  },
  
  "include": [
    "./scripts/*"
  ],

  "exclude": [
    "node_modules/"
  ]
}